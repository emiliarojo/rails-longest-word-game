<div class = "text-center display-4 m-3 p-3">
  <h1>Welcome to the longest word-game!</h1>
</div>

<div class = "row text-center display-5 m-3 p-3">
  <h2>Here is your grid:</h2>
</div>

<div class = "row text-center display-6 m-3 p-3">
  <div class="letter col border border-5 border-warning py-3">
    <%= @letters[0]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[1]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[2]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[3]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[4]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[5]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[6]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[7]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[8]%>
  </div>
  <div class="letter col border border-5 py-3 border-warning">
    <%= @letters[9]%>
  </div>
</div>

<div class = "text-center display-6 m-3 p-3">
  <h3>What is your longest word?<h3>
  <form action="/score" data-turbo="false">
    <input type="text" name="word">
    <input type="submit" value="Submit">
  </form>
</div>
